{% extends 'base.html.twig' %}

{% block title %}InscriptionCours{% endblock %}

{% block head %}
    <style>
        /* Centrage global du contenu */
        .container {
            max-width: 800px;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        /* Centrer le titre */
        h1.text-center {
            font-family: 'Arial', sans-serif;
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 20px;
        }

        /* Espacement de la table */
        .table {
            margin-bottom: 30px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Ajouter des bordures arrondies aux cellules de la table */
        .table th, .table td {
            padding: 15px;
            text-align: left;
            vertical-align: middle;
        }

        /* Boutons */
        .btn {
            margin: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        /* Section des liens */
        .text-center a {
            margin: 10px;
            text-decoration: none;
            font-weight: bold;
            padding: 10px 20px;
        }

        .text-center a:hover {
            opacity: 0.8;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">InscriptionCours</h1>

        <table class="table mx-auto">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ inscription_cour.id }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ inscription_cour.status }}</td>
                </tr>
                <tr>
                    <th>DateInscreption</th>
                    <td>{{ inscription_cour.dateInscreption ? inscription_cour.dateInscreption|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Montant</th>
                    <td>{{ inscription_cour.montant }}</td>
                </tr>
                <tr>
                    <th>TypePaiement</th>
                    <td>{{ inscription_cour.typePaiement }}</td>
                </tr>
                <tr>
                    <th>NomApprenant</th>
                    <td>{{ inscription_cour.nomApprenant }}</td>
                </tr>
                <tr>
                    <th>NomFormation</th>
                    <td>{{ inscription_cour.nomFormation }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_inscription_cours_index') }}" class="btn btn-primary">Back to list</a>
            <a href="{{ path('app_inscription_cours_edit', {'id': inscription_cour.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        {{ include('inscription_cours/_delete_form.html.twig') }}
    </div>
{% endblock %}
