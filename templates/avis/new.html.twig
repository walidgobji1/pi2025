{% block javascripts %}
    {{ parent() }}
    <script>
        console.log('Autocorrect script loaded');

        document.addEventListener('DOMContentLoaded', () => {
            const input = document.getElementById('commentaire'); // Match the intended ID
            if (!input) {
                console.error('Commentaire input not found');
                // Log all textareas to debug
                document.querySelectorAll('textarea').forEach(el => console.log('Found textarea:', el.id));
                return;
            }
            console.log('Input element found:', input);

            // Debounce to limit API calls
            function debounce(func, wait) {
                let timeout;
                return function(...args) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), wait);
                };
            }

            // Fetch autocorrect from server
            async function autocorrectText(text) {
                try {
                    const response = await fetch('/avis/spellcheck', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: 'text=' + encodeURIComponent(text)
                    });
                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(`HTTP error: ${response.status} - ${errorText}`);
                    }
                    const data = await response.json();
                    console.log('API response:', data);
                    return data.corrected || text;
                } catch (error) {
                    console.error('Autocorrect failed:', error);
                    return text;
                }
            }

            // Debounced autocorrect handler
            const handleInput = debounce(async (e) => {
                console.log('Input event fired:', e.target.value);
                const originalText = e.target.value;
                const correctedText = await autocorrectText(originalText);
                console.log('Original:', originalText, 'Corrected:', correctedText);
                if (correctedText !== originalText) {
                    console.log('Updating input to:', correctedText);
                    const start = e.target.selectionStart;
                    const end = e.target.selectionEnd;
                    e.target.value = correctedText;
                    e.target.setSelectionRange(start, end);
                }
            }, 500);

            input.addEventListener('input', handleInput);
        });
    </script>
{% endblock %}