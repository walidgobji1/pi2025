{% extends 'baseAdmin.html.twig' %}

{% block title %}Reviews for {{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Reviews for "{{ formation.titre }}"</h3>
        </div>
        <div class="card-body">
            {% if avisList is not empty %}
                <div class="row">
                    {% for avis in avisList %}
                        <div class="col-md-6">
                            <div class="card mb-3 border-0 shadow-sm {% if avis.isFlagged %}border-danger{% endif %}">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="text-warning fs-5">
                                            {% for i in 1..5 %}
                                                {% if i <= avis.note %}
                                                    <i class="fas fa-star"></i>
                                                {% else %}
                                                    <i class="far fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                        {% if avis.isFlagged %}
                                            <span class="badge bg-danger ms-2">Flagged</span>
                                        {% endif %}
                                    </div>
                                    <p class="card-text text-muted">{{ avis.commentaire }}</p>
                                    <small class="text-secondary">
                                        Submitted on {{ avis.dateCreation|date('d M Y') }}
                                    </small>

                                    {# Delete button under the review if flagged #}
                                    <div class="mt-2">
                                        <form action="{{ path('admin_avis_delete', {'id': avis.id}) }}" method="POST" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avis.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm {% if not avis.isFlagged %}d-none{% endif %}">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-warning text-center">
                    <i class="fas fa-info-circle"></i> No reviews yet.
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- FontAwesome for stars -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
