{% extends 'baseAdmin.html.twig' %}

{% block title %}Reviews for {{ formation.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Reviews for "{{ formation.titre }}"</h3>
        </div>
        <div class="card-body">
            {% if avisList is not empty %}
                <div class="row">
                    {% for avis in avisList %}
                        <div class="col-md-6">
                            <div class="card mb-3 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="text-warning fs-5">
                                            {% for i in 1..5 %}
                                                {% if i <= avis.note %}
                                                    <i class="fas fa-star"></i>
                                                {% else %}
                                                    <i class="far fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                    </div>
                                    <p class="card-text text-muted">{{ avis.commentaire }}</p>
                                    <small class="text-secondary">
                                        Submitted on {{ avis.dateCreation|date('d M Y') }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-warning text-center">
                    <i class="fas fa-info-circle"></i> No reviews yet.
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- FontAwesome for stars -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
