{% block body %}
<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>{{ button_label|default('Ajouter') }} une Le√ßon</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form_errors(form) %}
                                    <li class="text-danger">{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.titre) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.contenu) }}
                        {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.contenu) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.dateCreation) }}
                        {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.dateCreation) }}
                        </div>
                    </div>

            

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-2">{{ button_label|default('Enregistrer') }}</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
