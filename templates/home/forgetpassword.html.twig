{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="hero_area">
    <section class="slider_section">
        <div class="slider_bg_box">
            <div class="bg_img_box">
                <img src="{{ asset('frontOffice/images/slider-bg.jpg') }}" alt="">
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="detail-box text-center">
                        <h1 class="text-white">Mot de passe oublié ?</h1>
                        <p class="text-white">Entrez votre email pour recevoir un lien de réinitialisation.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container text-center">
            <h2>Réinitialiser votre mot de passe</h2>
            <p>Veuillez entrer votre email pour recevoir un lien.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Votre email" required>
                    </div>

                    <div class="btn_box text-center mt-4">
                        <button type="submit" class="btn btn-primary">Envoyer le lien</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
