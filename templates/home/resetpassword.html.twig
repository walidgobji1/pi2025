{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="hero_area">
    <section class="slider_section">
        <div class="slider_bg_box">
            <div class="bg_img_box">
                <img src="{{ asset('frontOffice/images/slider-bg.jpg') }}" alt="">
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="detail-box text-center">
                        <h1 class="text-white">Réinitialisation du mot de passe</h1>
                        <p class="text-white">Veuillez entrer votre nouveau mot de passe.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container text-center">
            <h2>Créer un nouveau mot de passe</h2>
            <p>Veuillez saisir un mot de passe sécurisé.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="password" class="fw-bold">Nouveau mot de passe</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Entrez un mot de passe" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="confirm-password" class="fw-bold">Confirmer le mot de passe</label>
                        <input type="password" id="confirm-password" name="confirm-password" class="form-control" placeholder="Confirmez votre mot de passe" required>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
